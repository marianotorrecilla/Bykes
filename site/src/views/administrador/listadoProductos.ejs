<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@400;700&family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/listaadmin.css">
    <title>Bykes - Make it yours - Administrador</title>
</head>
<body>
  <main class="container-fluid">
    <!--Navbar-->
    <%- include('../partials/headerNegro.ejs') %>
    
      

    <!--Listado de Productos-->
    <section class="row container col-12">

        <article class="titulo d-flex justify-content-center border-bottom border-dark col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <h5>Listado de Productos</h5>
        </article>

        <article class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 mt-2 mb-2">
            <a href="/administrador/create"><button type="button" class="btn btn-danger mt-1" style="background-color: #FF6000 ; border: orangered">Agregar Producto<ion-icon name="add-circle-outline"></ion-icon></button></a>
            <a href="/administrador/custom"><button type="button" class="btn btn-primary mt-1" style="background-color: #49D4C6 ; border: #49D4C6; color: #000000">Listado Productos Custom <ion-icon name="list-outline"></ion-icon></button></a>
            <a href="/usuarios"><button type="button" class="btn btn-danger mt-1" style="background-color: #FF6000 ; border: orangered">Listado de Usuarios<ion-icon name="list-outline"></ion-icon></button></a> 
            </article>
            <article class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 mt-2 mb-2">
              <form  class="p-2 col-12 d-flex justify-content-between " action="/administrador/search_results" method="GET">
                <input class="form-control mr-sm-2" type="search" name="search">
                <button style="background-color: #FF6000; color: white; border: orangered;" class="btn btn-outline-info my-2 my-sm-0" type="submit"><ion-icon name="search-outline"></ion-icon></button>
              </form>
            </article>
        
          <article class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
          <table class="table text-white" style="background-color: #000000;">
              <thead>
                <tr>
                  <th scope="col">Id</th>
                  <th scope="col">Marca/Modelo</th>
                  <th scope="col">Ver</th>
                  <th scope="col">Editar</th>
                  <th scope="col">Borrar</th>
                </tr>
              </thead>
              <tbody>
                <% bicicletas.forEach(bici => { %>
                <tr>
                  <td><%= bici.id%> </td>
                  <td><%= bici.brand%> - <%= bici.model%> </td>
                  <td><a href="/administrador/detalleAdmin/<%= bici.id%>"> <ion-icon name="eye-outline"></ion-icon></a></td>
                  <td><a href="/administrador/edit/<%= bici.id%>"> <ion-icon name="pencil-outline"></ion-icon></a></td>
                  <td><a href="/administrador/delete/<%= bici.id%>"><ion-icon name="trash-outline"></ion-icon></a></td>
                </tr>
                <% }); %>
              </tbody>
            </table> 
          </article>       

        
        


    </section>

    <%- include('../partials/footer.ejs') %>

  </main>
</body>
</html>